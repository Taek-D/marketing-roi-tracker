{
  "permissions": {
    "allow": [
      "Bash(clasp push)",
      "Bash(clasp pull)",
      "Bash(clasp status)",
      "Bash(clasp open)",
      "Bash(clasp login)",
      "Bash(npx clasp *)",
      "Bash(git status)",
      "Bash(git log *)",
      "Bash(git diff *)",
      "Bash(git add *)",
      "Bash(git commit *)",
      "mcp__github__get_me",
      "mcp__github__create_repository",
      "WebSearch",
      "WebFetch(domain:naver-ad-api.github.io)",
      "mcp__playwright__browser_navigate",
      "mcp__playwright__browser_take_screenshot",
      "mcp__playwright__browser_close",
      "WebFetch(domain:github.com)",
      "mcp__notion__API-post-search",
      "mcp__notion__API-get-block-children",
      "mcp__notion__API-post-page",
      "mcp__notion__API-get-self",
      "mcp__notion__API-patch-block-children",
      "mcp__notion__API-delete-a-block",
      "mcp__notion__API-retrieve-a-page",
      "mcp__supabase__list_projects",
      "mcp__supabase__apply_migration",
      "mcp__supabase__execute_sql",
      "mcp__vercel__deploy_to_vercel"
    ],
    "deny": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "node -c \"$(cat \"$CLAUDE_FILE_PATH\")\" 2>&1 || true"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "if echo \"$CLAUDE_TOOL_INPUT\" | grep -qiE 'rm\\s+-rf|git\\s+push\\s+--force|drop\\s+table'; then echo 'BLOCK: Dangerous command detected'; exit 1; fi"
          }
        ]
      }
    ]
  }
}
